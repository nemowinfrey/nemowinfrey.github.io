<script>
    // State management
    let userData = {
        name: '',
        perk: ''
    };

    // Navigation logic
    function showScreen(screenId) {
        document.querySelectorAll('.screen').forEach(s => s.classList.remove('active'));
        document.getElementById(screenId).classList.add('active');
    }

    // Step 1 Validation
    function validateAndNext() {
        const name = document.getElementById('inputName').value;
        const id = document.getElementById('inputId').value;
       
        if(name && id) {
            userData.name = name;
            showScreen('screen-perk');
        } else {
            alert("Please enter your Name and ID.");
        }
    }

    // Perk Selection Logic
    function selectPerk(type, element) {
        userData.perk = type;
       
        // Remove active class from all cards
        document.querySelectorAll('.perk-card').forEach(c => c.classList.remove('selected'));
        // Add to clicked card
        element.classList.add('selected');
       
        // Enable button
        const btn = document.getElementById('btn-finish');
        btn.style.opacity = '1';
        btn.style.pointerEvents = 'all';
    }

    // Finalize Check In
    function finishCheckIn() {
        const msg = document.getElementById('welcome-msg');
        msg.innerText = "You're In, " + userData.name.split(' ')[0] + "!";
       
        const perkDisplay = document.getElementById('perk-display');
        if (userData.perk === 'pokemon') {
            perkDisplay.innerHTML = "üÉè Don't forget to grab your <strong>Pok√©mon Card</strong> from the tray on your bed!";
        } else {
            perkDisplay.innerHTML = "üç´ Your <strong>Snack</strong> is waiting on your pillow!";
        }

        showScreen('screen-dashboard');
    }

    // Star Rating Visuals
    function rate(num) {
        const stars = document.querySelectorAll('#star-container span');
        stars.forEach((star, index) => {
            if(index < num) {
                star.classList.add('active');
            } else {
                star.classList.remove('active');
            }
        });
    }
</script>

